# Auth0 Configuration
# Copy this file to .env.local and replace with your actual values

# Generate a secure secret with: openssl rand -hex 32
AUTH0_SECRET='REPLACE_WITH_YOUR_LONG_RANDOM_SECRET'

# Your application's base URL
AUTH0_BASE_URL='http://localhost:3000'

# Your Auth0 tenant domain
AUTH0_DOMAIN='your-domain.auth0.com'

# Your Auth0 application's Client ID
AUTH0_CLIENT_ID='your-client-id'

# Your Auth0 application's Client Secret
AUTH0_CLIENT_SECRET='your-client-secret'

# Your Auth0 API identifier (if using external APIs)
AUTH0_AUDIENCE='https://your-api.com'

# The scopes your application is requesting
AUTH0_SCOPE='openid profile email offline_access read:documents write:documents'

# Session configuration
AUTH0_SESSION_ROLLING_DURATION='86400'  # 24 hours in seconds
AUTH0_SESSION_ABSOLUTE_DURATION='604800'  # 7 days in seconds