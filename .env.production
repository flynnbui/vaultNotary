# ======================
# PRODUCTION ENVIRONMENT VARIABLES
# ======================
# IMPORTANT: Replace all placeholder values with your actual production values

# Application Environment
ASPNETCORE_ENVIRONMENT=Production

# Database Configuration
DATABASE_CONNECTION_STRING=Host=your-production-db-host;Port=5432;Database=vaultnotary;Username=your-db-user;Password=your-db-password;SSL Mode=Require;Trust Server Certificate=false;

# AWS Configuration
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY=your-production-aws-access-key
AWS_SECRET_KEY=your-production-aws-secret-key
AWS_S3_BUCKET_NAME=your-production-s3-bucket
AWS_S3_FILE_PREFIX=files/
AWS_S3_PRESIGNED_URL_HOURS=24
AWS_KMS_SYMMETRIC_KEY_ID=your-production-kms-key-id

# Message Queue Configuration
RABBITMQ_CONNECTION_STRING=amqp://your-rabbitmq-user:your-rabbitmq-password@your-rabbitmq-host:5672

# Auth0 Configuration (Already configured)
AUTH0_DOMAIN=auth.nharong.vn
AUTH0_AUDIENCE=https://vaultnotary-api

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.nharong.vn
NEXT_PUBLIC_AUTH0_DOMAIN=auth.nharong.vn
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-frontend-auth0-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=https://vaultnotary-api

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Logging Configuration
LOG_LEVEL=Information
SERILOG_MINIMUM_LEVEL=Information

# Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-256-bits-minimum
CORS_ORIGINS=https://nharong.vn,https://www.nharong.vn,https://api.nharong.vn